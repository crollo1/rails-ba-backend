
<%= form_with model: @flight, local: true do |f| %>

    <%= f.label :date %>
    <br>
    <%= f.date_field :date %>
    <br><br>

    <%= f.label :flight %>
    <br>
    <%= f.text_field :flight %>
    <br><br>

    <%= f.label :origin %>
    <br>
    <%= f.text_field :origin %>
    <br><br>

    <%= f.label :destination %>
    <br>
    <%= f.text_field :destination %>
    <br><br>

    <%= f.submit %>


<% end %>